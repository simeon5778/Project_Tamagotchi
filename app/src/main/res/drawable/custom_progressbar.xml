<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

<!-- Define the background properties like color etc -->
<item android:id="@android:id/background">
    <shape>
        <corners
            android:radius="20dp" />
        <stroke
            android:width="2dp"
            android:color="#9DA8A8"
            />
        <gradient
            android:angle="90"
            android:centerX="65%"
            android:centerColor="#B3B3B3"
            android:startColor="#E6E6E6"
            android:endColor="#E6E6E6"
            android:type="linear"
            />
    </shape>
</item>

<!-- Define the progress properties like start color, end color etc -->
<item android:id="@android:id/progress">
    <clip>
        <shape>
            <corners
                android:radius="20dp" />
            <stroke
                android:width="2dp"
                android:color="#9DA8A8"
                />
            <gradient
                android:angle="90"
                android:centerX="75%"
                android:centerColor="#C1FAC6"
                android:startColor="#00C906"
                android:endColor="#1DFC03"
                android:type="linear"
                />
        </shape>
    </clip>
</item>
</layer-list>